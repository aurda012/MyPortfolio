<ul class="nav pull-right" style="padding-right: 20px;">
  <li class="nav-item">
    <a class="nav-link" href="javascript:history.back()"><button type="button" class="btn btn-secondary">Back</button></a>
  </li>
</ul>
<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio_item.main_image, 'main'), width: '100%' %>
    </div>

    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>

      <hr>

      <em><%= @portfolio_item.subtitle %></em>

      <p><%= @portfolio_item.body %></p>

      <hr>

      <h3>Technologies Used:</h3>

      <% @portfolio_item.technologies.each do |t| %>
      <p><%= t.name %></p>
      <% end %>

      <div class="pull-right">
        <%= link_to "View Live!", "http://#{@portfolio_item.website}", class: "btn btn-outline-primary" %>
      </div>

      <% if logged_in?(:site_admin) %>
        <div class="pull-right">
          <%= link_to "Edit Item", edit_portfolio_path(@portfolio_item), class: 'btn btn-warning' %>
        </div>
      <% end %>
    </div>
  </div>
</div>