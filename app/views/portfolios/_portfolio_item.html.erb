<div id="work" class="col-md-4 col-sm-6 portfolio-item">
  <div class="card portfolio-box" data-id="<%= portfolio_item.id %>">
    <a href='<%= portfolio_show_path(portfolio_item) %>'>
      <%= image_tag portfolio_img(portfolio_item.thumb_image, 'thumb'), width: '100%' %>
    </a>
    <div class="portfolio-item", style="text-align: center; padding-top: 10px;">
      <h4><span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span></h4> 
      <p class="text-muted"><%= portfolio_item.subtitle %></p> 
    </div>
  </div>
</div>